<div class=logged-in-container>
  <div class="my-courses-index">
    
    <div class="course-content">
      <h1>Hi, <%= @user.username %>!</h1>
      <h3>Courses You are Enrolled in</h3><hr>
      <% if @courses.empty? %>
      <p>You have not created any courses. <a href="/courses/new">Add A Course</a> to begin</p><br><br><br><br>
      <% else %>
      <div class="course-boxes">
        <div class="row" style="justify-content:center"> 
        <% @courses.each do |course| %>
          <div class="col-md-3" style="background-color: lightgrey">
            <h5 ><a href="/courses/<%= course.id %>"><%= course.name %></a></h5>
            <p ><%= course.schedule %></p>
            <%# <img width="100" height="100" src="https://placekitten.com/100/100/"> %>
        </div>
        <% end %>   
        </div>
      
        &emsp;<a href="/courses/new"><button class="btn btn-primary">Add A Course</button></a><br>
        <%end%></div>
    </div>  
  </div>

  
</div>