<h1>Create a new course below</h1>
<% if Helpers.is_logged_in?(session) %>
<%= @error %>
  <form action='/courses' method="post">
    Course Name:<input type="text" name="name"><br>
    Course Schedule:<input type="text" name="schedule"><br>
    Assignments:<input type="text" name="assignments"><br>
    Notes:<input type="text" name="notes"><br>

    <input type="submit" name="submit" id="submit">
  </form>

  <% else %>
      <h1> You Must Be Logged in to Create A Course </h1>
  <% end %>

