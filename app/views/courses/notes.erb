<div class=logged-in-container>
  <div class="course" style="color:darkcyan;">
  <h1>Notes</h1><hr>
  <% display = []%>
  <% if @courses.empty? %>
  <p>You have not created any notes. <a href="/courses/new">Add A Course</a> to begin</p><br><br><br><br>
  <% else %>
    <% @courses.each do |course| %>
      <% if course.notes.empty? %>
        <% display << "none"%>
      <% else %>
      
        <%notes = course.notes.split("\r\n")%>
        <%notes.each do |note|%>
        <li><a href="/courses/<%= course.id %>"> <%=note%> </a> </li>
        <%end%>
      <%end%>

      <%end%>


      <%if !display.empty? && display.size == @courses.size%>
        <p>Looks like you don't have any notes. Add notes to your <a href="/courses">courses</a></p>
      <%end%> 
    <%end%>
    </div>
</div>
  